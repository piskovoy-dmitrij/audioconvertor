= render 'friends_navigation'

%div.container-fluid
  %div.row
    - if current_user.requests.blank?
      %p
        You have no requests yet
    - else
      %table.table.table-striped.list-table
        %thead
          %tr
            %th
              User
            %th.text-right
              Action
        %tbody
          - current_user.requests.each do |friend|
            %tr
              %td
                = link_to user_path(friend) do
                  = friend.name
              %td.text-right
                = link_to 'Remove request', remove_friend_path(friend), method: :delete, data: {confirm: 'You sure?'}, class: 'btn btn-danger'
        %tfoot
          %tr
            %th
              User
            %th.text-right
              Action